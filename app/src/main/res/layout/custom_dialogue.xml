<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/greentick" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:textSize="30dp"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Done, My PA will reach out to you soon!" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:text="Meanwhile feel free to check out the rest of the app" />

    <Button
        android:id="@+id/tickbtn"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:backgroundTint="#059142"
        android:layout_height="wrap_content"
        android:text="Okay great!" />
</LinearLayout>